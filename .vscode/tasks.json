{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "mkdocs build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "serve",
            "type": "shell",
            "command": "mkdocs serve"
        },
        {
            "taskName": "preview",
            "type": "shell",
            "command": "xdg-open http://127.0.0.1:8000"
        }
    ]
}